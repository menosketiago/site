<section id="work">
    {{#work}}
        {{#each pages}}
            {{!-- Work items wrapper (one for each 9 items) --}}
            <div id="page-{{@key}}" class="wrapper">
                {{#each page}}
                    <a id="{{name}}" class="item" tabindex="0">
                        <h5>{{category}}</h5>
                        <h2>{{title}}</h2>
                        {{> view}}
                    </a>
                {{/each}}
            </div>
        {{/each}}
    {{/work}}

    {{!-- Buttons to scroll work items sideways --}}
    <button class="scroll left is-hidden">
        {{> icon-chevron}}
    </button>
    <button class="scroll right is-hidden">
        {{> icon-chevron}}
    </button>
</section>